<% if current_user.status == "admin" %>
  <%= render :partial => "add_property" %>
<% else %>
  <%= render :partial => "landlord_add_property" %>
<%
=begin%>
  <div id="content">
    <div class="news-carousel-wrapper">
      <dl id="news-carousel" class="news-carousel-style">
        <%= render 'properties/news_carousel'%>
      </dl>
    </div>
    <%= form_for @property, html: { multipart: true } do |f| %>
      <% if @property.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>
          <ul>
            <% @property.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="proper-singup">
        <h3 class=""><b>Update Property</b></h3>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :address1 %>
          <%= f.text_field :address1 %>
        </div>
        <div class="field">
          <%= f.label :address2 %>
          <%= f.text_field :address2 %>
        </div>
        <div class="field">
          <%= f.label :address3 %>
          <%= f.text_field :address3 %>
        </div>
        <div class="field">
          <%= f.label :postcode %>
          <%= f.text_field :postcode%>
        </div>
        <div class="field">
          <%= f.label :price %>
          <%= f.text_field :price %>
        </div>
        <div class="field">
          <%= f.label :beds %>
          <%= f.number_field :beds %>
        </div>
        <div class="field">
          <%= f.label :bath %>
          <%= f.number_field :bath %>
        </div>
        <div class="field">
          <%= f.label :tag_line %>
          <%= f.text_field :tag_line %>
        </div>
        <div class="field">
          <%= f.label :category %>
          <%= f.select :category, ["Rent","Sale"] %>
        </div><br><br><br>
        <div class="field">
          <%= f.label :parking_status %>
          <%= f.select :parking_status, ["None","On Street","Off Street"] %>
        </div><br><br>
        <div class="field">
          <%= f.label "Number of Cars" %>
          <%= f.number_field :car %>
        </div>        
        <div class="field">
          <%= f.label :image1 %>
          <%= f.file_field :image1 %>
        </div>
        <div class="field">
          <%= f.label :image2 %>
          <%= f.file_field :image2 %>
        </div>
        <div class="field">
          <%= f.label :image3 %>
          <%= f.file_field :image3 %>
        </div>
        <div class="field">
          <%= f.label :image4 %>
          <%= f.file_field :image4 %>
        </div>
        <div class="field">
          <%= f.label :image5 %>
          <%= f.file_field :image5 %>
        </div>
        <div class="field">
          <%= f.label :image6 %>
          <%= f.file_field :image6 %>
        </div>
        <div class="field">
          <%= f.label :image7, "Image6" %>
          <%= f.file_field :image7 %>
        </div>
        <div class="field">
          <%= f.label :image8, "Image7" %>
          <%= f.file_field :image8 %>
        </div>
        <div class="field">
          <%= f.label :image9, "Image8" %>
          <%= f.file_field :image9 %>
        </div>
        <div class="field">
          <%= f.label :image10, "Image9" %>
          <%= f.file_field :image10 %>
        </div>
        <div class="field">
          <%= f.label :short_description %>
          <%= f.text_area :short_description  %>
        </div>        
        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, :class => "desc" %>
        </div>
        <% if current_user.status=="admin" %>
          <div class="field">
            <%= f.label :agent_id %>
            <% arr = Agent.all.map { |ag| [ag.name, ag.id ] } %>
            <%= f.select :agent_id, (arr) %>
          </div><br/><br/><br/>
          <div class="field">
            <%= f.label :visibility %>
            <%= f.check_box :visibility %>
          </div>
          <div class="field">
            <div class="fiel">
            <%= f.label :parking,"Off street parking"%>
            <%= f.check_box :parking %>
          </div></div><br>
          <div class="field">
            <%= f.label :let %>
            <%= f.check_box :let %>
          </div>
          <div class="field">
            <div class="sol">
            <%= f.label :sold %>
            <%= f.check_box :sold %>
          </div></div><br>
          <div class="field">
            <%= f.label :featured %>
            <%= f.check_box :featured %>
          </div>
          <div class="field">
            <%= f.label :gas_CH %>
            <%= f.check_box :gas_ch %>
          </div>
          <div class="field">
            <%= f.label :glazing %>
            <%= f.check_box :glazing %>
          </div>
          <div class="field">
            <%= f.label :garden %>
            <%= f.check_box :garden %>
          </div>
          <div class="field">
            <%= f.label :dg %>
            <%= f.check_box :dg %>
          </div>          
        <%end%>  
        <br/>
        <div class="actions">
          <%= f.submit "Submit" %>
        </div>
      </div>  
    <% end %>
    <br/>
    <%= link_to 'Show', @property %> |
    <%= link_to 'Back', properties_path %>
  </div>

  <script type="text/javascript">
    $('.desc').cleditor();
  </script>
  <%
=end%>

<%end%>