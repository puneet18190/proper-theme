      <dd>Vivamus diam diam, fermentum sed dapibus eget, egestas sed eros. Lorem fermentum ipsum dolor sit amet, ipsum dolor sit amet.</dd>
    </dl>
  </div>
  <!--    End News Carousel-->
  <div class="container">
    <div class="panel">
      <!--Start Mission Wrapper-->
      <div class="box-line">
        <h1 class="title-heading">Our Ads</h1>
      </div>
      <div class="row-fluid">
        <% if @advertisements.nil? %>
          <div class="span4">
            <div class="dialog-box-style">
              <h3><span class="main-circle-icon"><i class="icon-arrow-right"></i></span> No Advertisements</h3>
              <p>Nothing to display...</p>
            </div>
            <div class="arrow-bottom"></div>
            <img src="assets/default_images/no.jpg"/>
          </div>
        <% else %>
          <div id="slider-wrapper">
            <ul id="ad_carousel">
              <% @advertisements.each do |ad| %>
                <div class="span4">
                  <div class="dialog-box-style">
                    <h3><span class="main-circle-icon"><i class="icon-arrow-right"></i></span><%= ad.name %></h3>
                    <p><%= ad.description %></p>
                  </div>
                  <div class="arrow-bottom"></div>
                    <%= image_tag ad.image.url, class: "full", class: "mask_hover" %>
                </div>
              <% end %>

            </ul>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div><!--EndContent-->

<script type="text/javascript">
    if ($('#ad_carousel').length){
        $('#ad_carousel').carouFredSel({
            width: '100%',
            circular: true,
            responsive: true,
            items: {
                width: 100,
                height: "250%",
                margin: 0,
                visible: {
                    min: 0,
                    max: 3
                }

            },
            align: false,
            scroll: {
                pauseOnHover: 'resume',
                fx: 'fade',
                easing: 'linear',
                items: 1,
                duration: 1000,
                timeoutDuration: 6000
            },
            mousewheel: true,
            swipe: {
                onMouse: true,
                onTouch: true
            },
            prev: '#prev',
            next: '#next',
            pagination: {
                container: '#pager',
                deviation: 1
            }

        });
    }
</script>