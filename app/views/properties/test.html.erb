<div class="sky">
    <div class="moon"></div>
    <div class="clouds_one"></div>
    <div class="clouds_two"></div>
    <div class="clouds_three"></div>
    <div class="row text-center">
        <div class="col-md-2 col-sm-6 hero-feature" style="float:left;margin-left:40px">
            <div class="thumbnail">
            </div>
        </div>

        <div class="col-md-3 col-sm-6 hero-feature" style="float:right;margin-right:40px">
            <div class="thumbnail">
                <div id="crotator" style="height:400px;width:750px;position:relative">
                    <div id="quotes">
                        <% @p_title.each_with_index do |a,i| %>    
                            <p><b style="color:red"><%= a %></b><br/><%= raw(@p_description[i]) %></p>
                        <% end %>
                    </div>

                </div>
            </div>
        </div>
    </div>        
    <hr>

    <div class="container">

        <header class="jumbotron hero-spacer">
            <iframe id="myIframe" frameborder="0" src="/cycle" style="width:1000px;height:1000px"></iframe>
        </header>

        <hr>
        <div class="row text-center">
            <img src="/assets/bbcnews.jpg" alt="" style="float:left" width="120" height="100"/>
            <div class="ticker well" data-duration="500" data-loop="2" data-effect="linear" style="width:770px;float:right;">
                <span>
                    <% @title.each_with_index do |a,i| %>      
                        <b style="color:red"><%= "#{a}" %></b> - <b style="color:black"><%= "#{@description[i]}" %></b> <b style="color:blue">|</b>
                    <%end%>
                </span>
            </div>
        </div>
        <hr>

    </div>
</div>
<script>

    $("#quotes").crotator({
        timeOfExistence: 5,
        cycle: true,
        typeofTag: "<h3/>",
        tagClass: "quotes"
    });

</script>
