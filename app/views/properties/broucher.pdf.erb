    <b><center><%=@properties.tag_line%></center></b>
  </div>

  <div style="position:absolute; top:1550px;height:80px;width:1300px;">
    <span style="width:120px;height:50px;font-weight: normal;display:inline-block;padding-left:15px;font-size:30px;color:#fff;text-shadow:0 -1px 0 rgba(0,0,0,0.25);white-space:nowrap;vertical-align:baseline;background-color:#999;margin:10px;padding-top:15px;margin-left:70px;border-radius:10px">Beds : <%= @properties.beds %></span>
    
    <span style="width:120px;height:50px;color:black;font-weight: normal;display:inline-block;padding-left:15px;font-size:30px;color:#fff;text-shadow:0 -1px 0 rgba(0,0,0,0.25);white-space:nowrap;vertical-align:baseline;background-color:#999;margin:10px;padding-top:15px;border-radius:10px">Bath : <%= @properties.bath %></span>
    
    <span style="width:190px;height:50px;font-weight: normal;display:inline-block;padding-left:15px;font-size:30px;color:#fff;text-shadow:0 -1px 0 rgba(0,0,0,0.25);white-space:nowrap;vertical-align:baseline;background-color:#999;margin:10px;padding-top:15px;border-radius:10px">Parking : <%= @properties.parking %></span>
    
    <span style="width:190px;height:50px;font-weight: normal;display:inline-block;padding-left:15px;font-size:30px;color:#fff;text-shadow:0 -1px 0 rgba(0,0,0,0.25);white-space:nowrap;vertical-align:baseline;background-color:#999;margin:10px;padding-top:15px;border-radius:10px">Garden : <%= @properties.garden %></span>
    
    <span style="width:190px;height:50px;font-weight: normal;display:inline-block;padding-left:15px;font-size:30px;color:#fff;text-shadow:0 -1px 0 rgba(0,0,0,0.25);white-space:nowrap;vertical-align:baseline;background-color:#999;margin:10px;padding-top:15px;border-radius:10px">Gas CH : <%= @properties.gas_ch %></span>
    
    <span style="width:130px;height:50px;font-weight: normal;display:inline-block;padding-left:15px;font-size:30px;color:#fff;text-shadow:0 -1px 0 rgba(0,0,0,0.25);white-space:nowrap;background-color:#999;margin:10px;padding-top:15px;border-radius:10px">DG : <%= @properties.dg %></span>
  </div>

  <div style="position:absolute;top:1780px;left:60px;">
    <center><%=wicked_pdf_image_tag("contact_info.png", :height=> "80", :width => "1200") %></center>
  </div>
</div>
<div class="page-break" style="display:block; clear:both; page-break-after:always;"></div>

