    <div style="font-size:40px;margin:10px"><center><b><%="#{@properties.address1}"%></b></center></div>
    <div style="font-size:40px;margin:10px"><center><b><%="#{@properties.address2}"%></b></center></div>
    <div style="font-size:40px;margin:10px"><center><b><%="#{@properties.address3}"%></b></center></div>
    <div style="font-size:40px;margin:10px"><center><b><%="#{@properties.postcode}"%></b></center></div>
  </div>

  <div class="desc-type for-sale" style="height:50px;width:125px;position:absolute;top:496px; padding:5px;left:197;color:white;font-size:30px;background: #FF6666;font-weight: bold;z-index:1;opacity:0.8"><%=(@properties.category == "rent" || @properties.category == "Rent") ? "To Rent" : "To Sale" %></div>
  
  <div style="margin:20px;width:650px;position:absolute;left:175px;border:2px solid Blue;">
    <center><%=image_tag(@properties.image1.url, :height=> "560",:width=>"650") %></center>
  </div>

  <div style="height:70px;width:<%=(@properties.category == "rent" || @properties.category == "Rent") ? "130px" : "230px" %>;position:absolute;font-weight: bold;background-color: rgba(0,0,0,0.8);font-size: 50px;color:white;padding:10px;top:967px;left:197px">
    &pound; <%= @properties.price.to_i %>
  </div>

  <div style="height:60px;width:1029px;background-color:purple;font-size:30px;margin:10px;color:white;font-family:arial;position:absolute; top:1100px;left:6px;padding-top:15px;">
