<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<%= wicked_pdf_stylesheet_link_tag "bootstrap.css" %>
<% no_image = "#{Rails.root}/app/assets/images/default_images/no.jpg" %>

<div class="float-left" style="width:700px;border:1px solid Black">
  <div class="well" style="margin:10px"><center><%=wicked_pdf_image_tag("seal_logo.png", :height=> "120",:width=>"500") %></center></div>
  <div style="font-size:30px;margin:5px"><center><b><%="#{@properties.name}"%></b></center></div>
  <div style="font-size:30px;margin:5px"><center><%="#{@properties.address1}"%></center></div>
  <div style="font-size:30px;margin:5px"><center><%="#{@properties.address2}"%></center></div>
  <div style="font-size:30px;margin:5px"><center><%="#{@properties.address3}"%></center></div>
  <div style="font-size:30px;margin:5px"><center><%="Price: Â£#{(@properties.price).to_s}"%></center></div>
  <div style="margin:10px"><center><%=image_tag("https://maps.googleapis.com/maps/api/staticmap?size=450x600&maptype=roadmap&sensor=false&zoom=11&markers=#{((@properties.coordinates).nil? ? "" :(@properties.coordinates).split(",")[0].to_f)}%2C#{((@properties.coordinates).nil? ? "" :(@properties.coordinates).split(",")[1].to_f)}", :height=> "450",:width=>"600") %></center></div>
  <div style="font-size:30px;margin:10px" class="well"><center><%="Contact: #{@properties.user.phone}"%></center></div>
</div>

<div class="float-right" style="position:absolute;width:720px;top:0;right:0px;border:1px solid Black">
  <div style="font-size:40px;padding:10px"><center><b>Agent Information</b></center></div>
  <div class="float-left" style="position:relative;top:30px;left:140px;width:450px;"><center><%=image_tag(@properties.agent.image.present? ? @properties.agent.image.url(:large) : no_image, :height=> "350",:width=>"450") %></center></div>
  <div class="well" style="margin-top:40px;margin:40px">
  <%if @properties.agent.name.present? %><div style="font-size:30px;margin:5px"><center><%="#{@properties.agent.name}"%></center></div><%end%>
  <%if @properties.agent.address.present? %><div style="font-size:30px;margin:5px;word-wrap: break-word;"><center><%="#{@properties.agent.address}"%></center></div><%end%>
  <%if @properties.agent.phone.present? %><div style="font-size:30px;margin:5px"><center><b>Phone:</b><%="#{@properties.agent.phone}"%></center></div><%end%>
  <%if @properties.agent.email_id.present? %><div style="font-size:30px;margin:5px"><center><b>Email:</b><%="#{@properties.agent.email_id}"%></center></div><%end%>
  <%if @properties.agent.fb_id.present? %><div style="font-size:30px;margin:5px"><center><b>Facebook:</b><%="#{@properties.agent.fb_id}"%></center></div><%end%>
  <%if @properties.agent.twitter_id.present? %><div style="font-size:30px;margin:5px"><center><b>Twitter:</b><%="#{@properties.agent.twitter_id}"%></center></div><%end%>
  </div>
</div>  
