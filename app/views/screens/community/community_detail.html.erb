            <!--Start Content-->
<div id="content">
  <%= render :partial => "/layouts/main_title",:locals => { :maintitle => "Property Detail", :subtitle=>"Newest Addition"} %>
  
  <div class="container" style="width:845px">
    
    <div class="row-fluid">
      <% unless @advertisements_l.blank? %>
      <div class="ad_left" style="width:218px;height:500px;margin:0;">    
        <% @advertisements_l.each do |ad| %>
          <% if (ad.expiry_date - (Time.now).to_date)> 0 %>
            <div id="oval_left" style="margin:5px;padding:3px;width:315px;height:300px;border: 1px solid">
              <b><%= ad.name%></b><br/>
              <%= ad.email%><br/>
              <%= ad.description%><br/>
              <%= image_tag ad.image.url,:style=>"width:190px"%><br/>
              Contact:<br/>
              <%= ad.phone%><br/>
              <%#= ad.expiry_date%><br/>
            </div>
         <% end %>
        <% end %>  
      </div>
    <% end %>
    <% unless @advertisements_r.blank? %>
      <div class="ad_right" style="width:218px;height:500px;margin:0;margin-left:437px">    
        <% @advertisements_r.each_with_index do |ad| %>
          <% if (ad.expiry_date - (Time.now).to_date)> 0 %>
            <div id="oval_right" style="margin:5px;padding:3px;width:315px;height:300px;border: 1px solid">
              <b><%= ad.name%> </b><br>
              <%= ad.email%><br>
              <%= ad.description%><br>
              <%= image_tag ad.image.url,:style=>"width:190px"%><br>
              Contact:
              <%= ad.phone%><br>
              <%#= ad.expiry_date%><br>
            </div>
          <% end %>
        <% end %>      
      </div>
    <% end %>
    </div>

  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  init_gmap3()
});
  function init_gmap3(){
    $(function(){
        var icon_villa = "/assets/map/hostel_0star.png";
        var icon_hotel = "/assets/map/villa.png";
        var img_p = "assets/properties/p1.jpg";
        $("#googleMap").gmap3({
            <% address =  "#{@data.address1} #{@data.address2} #{@data.address3}"%>
            map:{
                // CENTRAL MAP DEFAULT
                address:'<%= address %>',
                options:{
                    zoom:12,
                    scaleControl: false,
                    scrollwheel: false,
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    mapTypeControl: true,
                    mapTypeControlOptions: {
                        style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
                    }
                }
            },
            marker:{
                // DATA LOCATION
                values:[
                {
                  <% a=Geokit::Geocoders::GoogleGeocoder.geocode "#{address}"%>
                  <%lat = (a.ll.nil? ? "" : a.ll.split(",")[0].to_f) %>
                  <%lng = (a.ll.nil? ? "" : a.ll.split(",")[1].to_f) %>
                    latLng:[<%= lat%>,<%= lng%>],
                    data:{
                        img_preview: img_p,
                        properties_name:'<%= @data.name%>',
                        properties_desc:'<%=@data.description%>',
                        properties_link:"#",
                        zip:'<%=@data.postcode%>',
                        city:'<%=@data.address3%>'
                    },
                    options:{
                        icon: icon_hotel //Image or icon of shop want to display on map
                    }
                }
                ]

            }

        });
    });
}
</script>
