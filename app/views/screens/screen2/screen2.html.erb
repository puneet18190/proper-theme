
<script type="text/javascript">
$(document).ready(function() {
	var index=0;
	run_script(index);
})	

function run_script(index){
	var urls =  ["screen2/page1","screen2/page2"];
	$.ajax({
		type : 'get',
		url : '/'+urls[index],
		async: false,
		success : function(response){
			$(".main_container").html(response);
			var num = index+1
			var delay = 10000;
			$(".screen_num").html("Screen 2 Page "+num)
			index = index+1;
			if (index == urls.length){
				index = 0;
			}
			if (num == 1){
				delay = 20000;
			}else if(num == 2){
				delay = 10000
			}
			setTimeout(
			  function() 
			  {
			    run_script(index);
			  }, delay);
			
		},
		error : function(){
			run_script(0);
		}
	})
}
</script>