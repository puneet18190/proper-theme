<div class="container">
	<h1>Tasks</h1>

	<%= form_tag :controller => 'rubyzohos', :action => 'create_task' do %>
	    <%= label_tag "Task_Owner" %> <br>
	    <%= text_field_tag "Task_Owner" %><br><br>
	    <%= label_tag "Subject" %> <br>
	    <%= text_field_tag "Subject" %><br><br>
	    <%= label_tag "Description" %> <br>
	    <%= text_area_tag "Description" %><br><br>
	    <%= submit_tag "Submit" %>
	<% end %>

	<%= link_to 'View Task Details', 'get_tasks' %>
</div>	