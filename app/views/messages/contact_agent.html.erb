<% page_header "Start Conversation" %>
<%= form_for @contact_agent, :url => contact_agent_path  do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class=> "form-control", :placeholder=>"Enter Your Name",required: true, :style => "height:34px;border-radius: 4px;"%>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, :class=> "form-control", :placeholder=>"Enter Your Email",required: true, :style => "height:34px;border-radius: 4px;"%>
  </div>

  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, :class=> "form-control", :placeholder=>"Your Message",required: true, :style => "height:34px;border-radius: 4px;"%>
  </div>
  
  <%= f.hidden_field :agent_id, :value => @agent.id %>
  <%= f.hidden_field :page_link, :value => request.url %>
  <%= f.submit 'Send', class: 'btn btn-primary alert_popup' %>
<% end %>

