<div id="content">
    <div id="main-title-content">
        <img src="assets/properties/slider/fslider/p1.jpg" id="bg" alt="main-title"/>
        <div class="container">
            <div class="panel">
                <h1>Our Agents</h1>    
                <p>Sub Title Here</p>    
            </div>
        </div>
    </div>
    <div class="news-carousel-wrapper">
        <dl id="news-carousel" class="news-carousel-style">
          <%= render 'properties/news_carousel'%>
        </dl>
    </div>
    <div class="container agent-panel">
        <div class="item-agent panel ">
          <% @agents.each do |agent| %>
            <div class="row-fluid">
                <div class="span3 bottom-line line-after">
                    <div class="panel">
                        <h3 class="main-heading bottom-line line-after"><span class="main-circle-icon"><i class="icon-user"></i></span> <%= agent.name %></h3>
                        <a href="#" class="agent-image">
                          <%=  image_tag responsive_image(agent.image), class: "full", class: "img-circle", :style=>"height:165px;width:230px;" %>
                        </a>
                    </div>
                </div>
                <div class="span9 ">
                    <div class="panel left-line bottom-line desc-agent-preview">
                        <h3 class="line-before bottom-line main-heading"><span class="main-circle-icon"><i class="icon-circle-arrow-down"></i></span>Contact Details</h3>
                        <p> </p>
                        <ul class="unstyled">
                            <li><i class="icon-phone"></i> <%= agent.phone %></li>
                            <li><i class="icon-home"></i> <%= agent.address %></li>
                            <li><i class="icon-envelope"></i> <%= agent.email_id%></li>
                            <li><i class="icon-facebook"></i> <%= agent.fb_id%></li>
                            <li><i class="icon-twitter"></i> @<%= agent.twitter_id%></li>
                        </ul>
                        <div class="agent-image-properties">
                            <% if agent.properties.empty? %>
                               <a href="#"><img src="assets/default_images/no.jpg" class="img-polaroid tootip" data-toggle="tooltip" data-placement="bottom" title="033 Central Park" alt="033 Centra" style="width:55px;height:55px;"/></a>
                               <a href="#"><img src="assets/default_images/no.jpg" class="img-polaroid tootip" data-toggle="tooltip" data-placement="bottom" title="033 Central Park" alt="033 Centra" style="width:55px;height:55px;"/></a>
                               <a href="#"><img src="assets/default_images/no.jpg" class="img-polaroid tootip" data-toggle="tooltip" data-placement="bottom" title="033 Central Park" alt="033 Centra" style="width:55px;height:55px;"/></a>
                            <% else %>
                                <% @prop = agent.properties[0] %>
                                <% (1..3).each do |n| %>
                                    <%if @prop.send("image#{n}").url.nil? %>
                                        <a href="#"><img src="assets/default_images/no.jpg" class="img-polaroid tootip" data-toggle="tooltip" data-placement="bottom" title="033 Central Park" alt="033 Centra" style="width:55px;height:55px;"/></a>
                                    <%else%>
                                        <%= image_tag responsive_image(@prop.send("image#{n}")), class: "img-polaroid tootip", :style=>"width:55px;height:55px;" %>
                                    <%end%>    
                                <%end%>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
          <% end %>
        </div>
    </div>
</div>
