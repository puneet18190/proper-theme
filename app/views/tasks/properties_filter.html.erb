

            <!--Start Content-->
            <div id="content">
                <!--Start Main Title-->
                <div id="main-title-content" class="no-padding">
                    <img src="assets/properties/slider/fslider/p1.jpg" id="bg" alt="main-title"/>
                    <div class="container">
                        <div class="panel">
                            <h1>Properties</h1>    
                            <p>Sub Title Here</p>    
                        </div>
                    </div>
                </div> <!--End Main Title-->

                <!--    News Carousel -->
                <div class="news-carousel-wrapper">
                    <dl id="news-carousel" class="news-carousel-style">
                      <%= render 'properties/news_carousel'%>
                    </dl>
                </div><!--  End News Carousel -->

                <div class="container">
                    <div class="row-fluid">
                        <div class="span9">
                            <div class="panel right-line">
                                <!--  Start List Properties -->
                                <div class="row-fluid">
                                    <div class="span6">
                                        <h2 class="main-heading bottom-line"><span class="main-circle-icon"><i class="icon-building"></i></span> List Properties</h2>   
                                    </div>
                                    <div class="span6 ">
                                        <div class="main-heading bottom-line line-before filterarea">
                                            <form class="filterform">
                                              <p></p>
                                                <!--<select class="">-->
                                                    <!--<option>Asc</option>-->
                                                    <!--<option>Desc</option>-->
                                                <!--</select>-->
                                                <!--<select class="">-->
                                                    <!--<option>Price</option>-->
                                                    <!--<option>Location</option>-->
                                                <!--</select>-->
                                            </form>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </div>

                              <% if @prop.empty? %>
                                  <div class="item" >
                                    <a href="#" class="with-hover">
                                      <img alt='images' src="assets/default_images/no.jpg" class="full"/><span class="mask_hover"></span>
                                    </a>
                                  </div>
                              <% else %>
                              <% @prop.each do |task| %>
                              <% if task.visibility== true %>
                                <div class="list-properties right-space">
                                    <div class="property ">
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="property-images">
                                                    <a href="#">
                                                        <div class="mask">
                                                            <div class="desc-type for-sale"><%= task.category %></div>
                                                            <div class="price">&euro; <%= task.price %></div>
                                                        </div>
                                                        <%= image_tag responsive_image(task.image1), :style=>"height:250px;width:500px;" %>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="span6">
                                                <div class="property-details">
                                                    <h3><a href="#"><%=task.name%></a></h3>
                                                    <p><%= raw(task.description) %></p>
                                                    <p>
                                                        <span class="label"><i class="icon-circle-arrow-right"></i> Bath : <%=task.bath%></span>
                                                        <span class="label"><i class="icon-circle-arrow-right"></i> Beds : <%=task.beds%></span>
                                                    </p>
                                                    <div class="agent-preview">
                                                        <% ag = Agent.find_by_id(task.agent_id)%>
                                                        <div class="agent-image pull-left"  ><a href="#"><%= image_tag responsive_image(ag.image), :style=>"height:80px;width:200px;" %></a></div>
                                                        <div class="agent-contant pull-right">
                                                            <ul class="unstyled">
                                                                <li><i class="icon-phone"></i><%=ag.phone%></li>
                                                                <li><i class="icon-envelope"></i><%=ag.email_id%></li>
                                                                <li><i class="icon-facebook"></i><%=ag.fb_id%></li>
                                                                <li><i class="icon-twitter"></i><%=ag.twitter_id%></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                              <% end %>
                             <% end %>
                            <% end %>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="panel">
                              <form class="bottom-line line-before" action="/index" method="get">
                                <h3 class="main-heading bottom-line line-before"><span class="main-circle-icon"><i class="icon-search"></i></span>Find Properties</h3>
                                <%= search_form_for Property.search(params[:q]) do |f| %>
                                    <div class="field">
                                      <div class="input-block-level">
                                        <%= f.label :name_cont, "Name" %>
                                        <%= f.search_field :name_cont, class: "tc1size" %>
                                      </div>
                                      <div class="input-block-level">
                                        <%= f.label :category_cont, "Category" %>
                                        <%= f.select :category_cont, ["Rent","Sale"], class: "tcksize" %>
                                      </div>
                                      <div class="control-group half pull-left">
                                        <%= f.label :price_lteq, "Min Price" %>
                                        <%= f.search_field :price_lteq, class: "tpgsize" %>
                                      </div>
                                      <div class="control-group half text-right pull-right">
                                        <%= f.label :price_gteq, "Max Price", class: "tpgsize"  %>
                                        <%= f.search_field :price_gteq, class: "tpgsize" %>
                                      </div>
                                      <div class="input-block-level">
                                        <%= f.label :beds_eq, "Beds" %>
                                        <%= f.search_field :beds_eq, class: "tc1size" %>
                                      </div>
                                      <div class="input-block-level">
                                        <%= f.label :bath_eq, "Bath" %>
                                        <%= f.search_field :bath_eq, class: "tc1size" %>
                                      </div>
                                      <div class="input-block-level">
                                        <%= f.label :postcode_eq, "Postcode" %>
                                        <%= f.search_field :postcode_eq, class: "tc1size" %>
                                      </div>
                                    </div>
                                    <div class="actions"><%= f.submit "Search" %></div>
                                <% end %>
                              </form>
                                <!--End Form Search Properties-->
                                <!--Start List Our Agent-->
                              <h3 class="bottom-line  line-before main-heading"><span class="main-circle-icon"><i class="icon-list"></i></span>  Our Agents</h3>
                              <div class="list-items ">
                                <% @agents.each do |agent| %>
                                  <div class="item">
                                    <%=  image_tag responsive_image(agent.image), alt: "Corin Langpost", class: "img-preview", :style=>"height:70px;width:100px;" %>
                                      <div class="item-desk">
                                        <div class="title">
                                          <h3><a href="#"><%=agent.name%></a></h3>
                                        </div>
                                        <div class="location"><%=agent.address%></div>
                                        <a href="#" class="btn-proper btn-mini btn">Profile Page</a>
                                      </div>
                                      <div class="clearfix"></div>
                                  </div>
                                <% end %>
                              </div>
                                <!--End List Our AGents -->
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--EndContent-->
