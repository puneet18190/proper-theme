<div id="documents" class="tab-pane fade" style="width:100%;height:100%">
	<% if params[:action] == "edit" %>
		<table class="table">
			<th>Name</th>
			<th>Description</th>
			<th>Download</th>

			<% @documents.each do |d| %>
				<tr>
					<td><%= d.name %></td>
					<td><%= d.description %></td>
					<td><%= link_to "Download", d.url unless d.url.blank?%></td>
				</tr>
			<%end%>
		</table>
	<%end%>

	<%= f.fields_for @property_document do |p| %>
		<div style="float:left;margin:10px;width:35%; padding-left:40px">
		    <h3 style="margin-top:10px;padding:5px"><b>Add Document</b></h3>
		    
		    <div class="field" style="height: 32px">
		      <%= p.label :name, style: "display: inline" %>
		      <%= p.text_field :name, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-left: 8px" %>
		    </div>

		    <div class="field" style="height: 50px">
		      <%= p.label :description, style: "display: inline" %>
		      <%= p.text_area :description, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-left: 8px" %>
		    </div>

		    <div class="field" style="height: 32px">
		    	<%= p.file_field :property_doc, style: "display: inline; margin-top: 0; margin-left: 0" %>
		    </div>

		</div>
	<%end%>
</div>