<div id="tenancy_term" class="tab-pane fade" style="width:100%;height:100%">
	<%= f.fields_for :tenancy_term do |p| %>
		<div style="float:left;margin:10px;width:35%; padding-left:40px">
		    <h3 style="margin-top:10px;padding:5px"><b>Tenancy Term</b></h3>
		    
		    <div class="field date_check" style="height: 32px">
		      <%= p.label :start_date, style: "display: inline" %>
		      <%= p.date_select :start_date, {:use_short_month => true, include_blank: true}, { style: "margin-top: 0; margin-left: 0; display:inline; float: right; width: 74px"} %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :tenancy_length, style: "display: inline" %>
		      <%= p.text_field :tenancy_length, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-left: 8px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :agreed_rent, style: "display: inline" %>
		      <%= p.text_field :agreed_rent, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-left: 8px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :agreed_bond, style: "display: inline" %>
		      <%= p.text_field :agreed_bond, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-left: 8px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :advanced_payment, style: "display: inline" %>
		      <%= p.text_field :advanced_payment, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-left: 8px" %>
		    </div>

		    <h3 style="margin-top:10px;padding:5px"><b>Additional Facilities</b></h3>
		    <div class="field" style="height: 32px">
		      <%= p.label :shared, style: "display: inline" %>
		      <%= p.check_box :shared, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :garden, style: "display: inline" %>
		      <%= p.check_box :garden, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :parking, style: "display: inline" %>
		      <%= p.check_box :parking, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :other, style: "display: inline" %>
		      <%= p.check_box :other, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <h3 style="margin-top:10px;padding:5px"><b>Services </b></h3>
		    <div class="field" style="height: 32px">
		      <%= p.label :water, style: "display: inline" %>
		      <%= p.check_box :water, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :council_tax, style: "display: inline" %>
		      <%= p.check_box :council_tax, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :gas, style: "display: inline" %>
		      <%= p.check_box :gas, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :electricity, style: "display: inline" %>
		      <%= p.check_box :electricity, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :tv_licence, style: "display: inline" %>
		      <%= p.check_box :tv_licence, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :telephone, style: "display: inline" %>
		      <%= p.check_box :telephone, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :broadband, style: "display: inline" %>
		      <%= p.check_box :broadband, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :other, style: "display: inline" %>
		      <%= p.check_box :other, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>
		</div>

		<div style="float:left;margin:10px;width:35%; padding-left:80px">
		    <h3 style="margin-top:10px;padding:5px"><b>Attachments</b></h3>
		    <div class="field" style="height: 32px">
		      <%= p.label :inventory, style: "display: inline" %>
		      <%= p.check_box :inventory, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :guarantor_agreement, style: "display: inline" %>
		      <%= p.check_box :guarantor_agreement, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :epc, style: "display: inline" %>
		      <%= p.check_box :epc, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :rent_guide,"How to rent guide", style: "display: inline" %>
		      <%= p.check_box :rent_guide, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :smoke_alarm,"Smoke Alarm release", style: "display: inline" %>
		      <%= p.check_box :smoke_alarm, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		    <div class="field" style="height: 32px">
		      <%= p.label :pet,"Pet Agreement", style: "display: inline" %>
		      <%= p.check_box :pet, style: "margin-top: 0; margin-left: 0; display:inline; float: right; margin-right: 250px" %>
		    </div>

		</div>
	<%end%>
</div>

<script type="text/javascript">
	$("#property_tenancy_term_attributes_pet").on('click', function(){
        var ischecked= $(this).is(':checked');
        if(ischecked){
        	$("#pet_detail_tab").removeClass('hide');
        }else{
        	$("#pet_detail_tab").addClass('hide');
        }
    }); 
</script>