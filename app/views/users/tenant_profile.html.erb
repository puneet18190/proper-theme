<!--Start Content-->
<div id="content">
    <!--Start Main Title-->
  <div class="news-carousel-wrapper">
    <dl id="news-carousel" class="news-carousel-style">
      <%= render 'properties/news_carousel'%>
    </dl>
  </div>
  <div class="container" style="width:1230px">
    <div class="panel">
      <div class="box-line">
        <h3 class="title-heading">Please complete the form</h3>
      </div>
      <%= form_for @user, html: { multipart: true,class: "proper-form-step" },:style=>"" do |f| %>
        <div class="proper-form-step-area">
          <h4>Personal Information</h4>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :title %>
              <%= f.text_field :title, class: "input-block-level" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "input-block-level", required: "true" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "input-block-level", required: "true" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :address1 %>
              <%= f.text_field :address1, class: "input-block-level" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :address2 %>
              <%= f.text_field :address2, class: "input-block-level" %>
            </div>
            </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :address3 %>
              <%= f.text_field :address3, class: "input-block-level" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :postcode %>
              <%= f.text_field :postcode, class: "input-block-level", required: "true" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label "Phone" %>
              <%= f.text_field :phone, class: "input-block-level", required: "true" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label "Alternative Phone" %>
              <%= f.text_field :mobile, class: "input-block-level" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4">
              <%= f.label :email %>
              <%= f.text_field :email, class: "input-block-level", required: "true", disabled: "true" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span4" style="width:31.8% !important">
              <%= f.label "Date Of Birth" %>
              <%= f.date_select :dob, class: "input-block-level", required: "true", start_year: 1930,end_year: 2015, :order => [:day, :month, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' } %>
            </div>
          </div>
<%
=begin%>
          <h4>Background Information</h4>
          <div class="row-fluid">
            <div class="span2">
              <%= f.label "Employment Status" %>
              <%= f.text_field :employment, class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label :student %>
              <%= f.select :student,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label "Benefits Claimant" %>
              <%= f.select :benefit,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label "Tenancy Type" %>
              <%= f.select :tenancy_type,['Joint','Single'], class: "input-block-level", required: "true" %>
            </div>
          </div>
          <h4>Property Details</h4>
          <div class="row-fluid">
            <div class="span2">
              <%= f.label :property_type %>
              <%= f.select :property_type,["Lower Flat", "Upper Flat", "Maisonette", "Terrace House", "Semi-Detached", "Detached", "Studio", "Apartment", "Commercial", "Land"], class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label "Number of Bedrooms" %>
              <%= f.number_field :beds, class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label "Number of Bathrooms" %>
              <%= f.number_field :bath, class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label :max_price %>
              <%= f.number_field :max_price, class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label :garden %>
              <%= f.select :garden,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label :parking %>
              <%= f.select :parking,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span2">
              <%= f.label :gas_ch %>
              <%= f.select :gas_ch,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>            
            <div class="span2">
              <%= f.label :dg %>
              <%= f.select :dg,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label "En-suite" %>
              <%= f.select :ensuite,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
            <div class="span2">
              <%= f.label "Furnished" %>
              <%= f.select :furnished,['No','Yes'], class: "input-block-level", required: "true" %>
            </div>
          </div>
<%
=end%>
        </div>
        <%= f.submit 'Save', class: "btn btn-proper btn-large" %>
      <%end%><!-- End Form Step -->
    </div>
  </div>
</div><!--EndContent-->

<style type="text/css">
  select{
    width: 100% !important;
  }
  #user_dob_1i{
    width: 35% !important;
  }
  #user_dob_2i{
    width: 39% !important;
  }
  #user_dob_3i{
    width: 26% !important;
  }
  /*.input-block-level{
    margin-top: -40px;
    margin-left: 75px
  }*/
</style>

<script type="text/javascript">
  $(".btn-proper").click(function(e){
    // var date = new Date()
    // var d= date.getDate();
    // var m = date.getMonth();
    // var y = date.getFullYear();
    var d = parseInt($("#user_dob_3i option:selected" ).text())
    var m = parseInt($("#user_dob_2i option:selected" ).val())
    var y = parseInt($("#user_dob_1i option:selected" ).text())
    if (<%= DateTime.now.year %> >= y && <%= DateTime.now.month %> >= m && <%= DateTime.now.day %> >= d){
      $(".proper-form-step").submit()
    }else{
      e.preventDefault();
      alert("Future Date cant be selected.")
    }
  })
</script>